{
  "name": "eclipse-che-next",
  "version": "1.0.0",
  "description": "Next-generation TypeScript implementation of Eclipse Che Server REST APIs",
  "main": "dist/index.js",
  "scripts": {
    "build": "webpack --color --config webpack.config.prod.js",
    "build:dev": "webpack --color --config webpack.config.dev.js",
    "build:watch": "yarn build:dev --watch",
    "start": "node --no-deprecation dist/index.js",
    "start:debug": "nodemon --inspect --no-deprecation dist/index.js",
    "dev": "lsof -ti tcp:8080 | xargs kill && yarn build:dev && yarn start:debug",
    "format:check": "prettier --config .prettierrc --check src/",
    "format:fix": "prettier --config .prettierrc --write src/",
    "lint:check": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}'",
    "lint:fix": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --fix",
    "stylelint": "stylelint src/**/*.css",
    "stylelint:fix": "stylelint src/**/*.css --fix",
    "test": "jest --silent=false --no-cache",
    "test:watch": "yarn test --watch",
    "test:coverage": "yarn run pretest && jest --coverage --no-cache",
    "license:check": "$PWD/scripts/container_tool.sh run --rm -t -v $PWD/:/workspace/project quay.io/che-incubator/dash-licenses:next --check --batch 200",
    "license:generate": "$PWD/scripts/container_tool.sh run --rm -t -v $PWD/:/workspace/project quay.io/che-incubator/dash-licenses:next --batch 200",
    "header:check": "node header-check.js",
    "header:check:verbose": "node header-check.js --verbose",
    "header:fix": "node header-check.js --fix",
    "pretest": "yarn header:check",
    "prebuild": "yarn header:check"
  },
  "contributors": [
    {
      "name": "Oleksii Orel",
      "email": "oorel@redhat.com"
    }
  ],
  "keywords": [
    "kubernetes",
    "namespace",
    "provisioning",
    "api"
  ],
  "author": "",
  "license": "EPL-2.0",
  "dependencies": {
    "@devfile/api": "^2.3.0-1757407014",
    "@eclipse-che/che-devworkspace-generator": "^7.112.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@fastify/websocket": "^10.0.1",
    "@kubernetes/client-node": "^0.20.0",
    "axios": "^1.13.2",
    "dotenv": "^16.3.1",
    "fastify": "^4.26.0",
    "js-yaml": "^4.1.1",
    "multi-ini": "^2.3.2",
    "pino": "^8.21.0",
    "pino-pretty": "^10.3.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@types/yamljs": "^0.2.34",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "copy-webpack-plugin": "^13.0.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-notice": "^1.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-webpack-plugin": "^4.0.1",
    "glob": "^13.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.1.0",
    "speed-measure-webpack-plugin": "^1.5.0",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "terser-webpack-plugin": "^5.3.10",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^5.10.0",
    "webpack-node-externals": "^3.0.0"
  }
}
